@page
@model Multi_level.Pages.SignInModel
@{
    ViewData["Title"] = "Đăng nhập hệ thống";
}
<!-- Header-->
<header class="bg-img py-5" style="height:397px;">
    <div class="container px-4 px-lg-5 my-5">
        <div class="text-center text-white">
            <h1 class="display-4 fw-bolder color-blue-2">ĐĂNG NHẬP HỆ THỐNG</h1>
        </div>
    </div>
</header>
<section class="py-5">
    <div class="container col-xs-12 col-md-6 justify-content-center">
        <h5 class="align-content-center color-blue-2">@Model.message</h5>
        <form enctype="multipart/form-data" method="post" id="frmSignUp" class="form justify-content-center">
            <div class="card">
                <div class="card-header bg-blue-custom color-light">Thông tin tài khoản</div>
                <div class="card-body">
                    <div class="form-group">
                        <label>
                            <b>Số điện thoại <i> * </i></b>
                        </label>
                        <input type="text" class="form-control" asp-for="@Model.model.Username" autocomplete="off" required />
                        <small style="font-style:italic; font-weight:bold;"><i class="bi bi-quote"></i>Lưu ý: Đăng nhập hệ thống bằng số điện thoại đã đăng ký.</small>
                    </div>
                    <div class="form-group">
                        <label>
                            <b>Mật khẩu <i> * </i></b>
                        </label>
                        <input type="password" class="form-control" asp-for="@Model.model.Password" required />
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-success">Đăng nhập</button>
                    <a href="/Index" class="btn btn-info">Đăng ký thành viên</a>
                </div>
            </div>

        </form>
    </div>
</section>
