@using Multi_level.Helper;
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor _httpContextAccessor
@{
    UserSession session = SessionHelpers.GetUser(_httpContextAccessor);
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="author" content="e-software.vn">
    <meta name="description" content="Gia công phần mềm, tư vấn và viết phần mềm theo yêu cầu. Công ty cổ phần dịch vụ phần mềm E-SOFT">
    <meta name="keywords" content="Gia công phần mềm, tư vấn và viết phần mềm theo yêu cầu. Công ty cổ phần dịch vụ phần mềm E-SOFT">
    <meta name="news_keywords" content="Gia công phần mềm, tư vấn và viết phần mềm theo yêu cầu. Công ty cổ phần dịch vụ phần mềm E-SOFT">
    <title>@ViewData["Title"] - SPDAICAT</title>
    <!-- Bootstrap icons-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link href="~/lib/bootstrap/bootstrap_table/bootstrap-table.css" rel="stylesheet" />
    <link href="~/css/styles.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/stylesheet.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/js/toastrjs/toastr.css" rel="stylesheet" />
</head>
<body>
    <!-- Navigation-->
    <nav class="navbar navbar-expand-lg navbar-light bg-blue-custom">
        <div class="container px4 px-lg-5">
            <a class="navbar-brand color-light" href="/"><strong>SPDAICAT</strong></a>
            <button class="navbar-toggler collapsed color-light" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><i class="bi bi-list"></i></button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4">
                    @if (session == null)
                    {
                        <li class="nav-item"><a class="nav-link active color-light" aria-current="page" href="/SignIn"><i class="bi-person-badge-fill"></i> Đăng nhập</a></li>
                        <li class="nav-item"><a class="nav-link active color-light" aria-current="page" href="/"><i class="bi-person-badge-fill"></i> Đăng ký</a></li>
                    }
                    else
                    {
                        <li class="nav-item"><a class="nav-link active color-light" aria-current="page" href="/Report"><i class="bi bi-bar-chart"></i> Báo cáo nhóm</a></li>
                        <li class="nav-item"><a class="nav-link active color-light" aria-current="page" href="/Invoice"><i class="bi bi-collection"></i> Quản lý hoá đơn</a></li>
                   @*     <li class="nav-item"><a class="nav-link active color-light" aria-current="page" href="/Benefit"><i class="bi bi-bank"></i> Tri Ân</a></li>*@
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle color-light" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="true">Xin chào @session.FullName</a>
                            
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown" data-bs-popper="static">
                                <li class="dropdown-item"><a class="nav-link" aria-current="page" href="/Profile">Cập nhật thông tin</a></li>
                                <li class="dropdown-item"><a class="nav-link" aria-current="page" href="/ChangePass">Đổi mật khẩu</a></li>
                                <li class="dropdown-item">
                                    <form method="post" asp-page="/SignIn" asp-page-handler="Logout" id="frmlogout">
                                        <a class="nav-link" aria-current="page" href="#" id="logout"><i class="btn-person-up"></i>Đăng xuất</a>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
        @RenderBody()
    <footer class="py-5 bg-dark">
        <div class="container">
            <p class="m-0 text-center text-white">&copy; 2023 development by <a href="https://e-software.vn">minh.duong</a></p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/bootstrap/bootstrap_table/bootstrap-table.js"></script>
    <script src="~/js/toastrjs/toastr.min.js"></script>
    <script src="~/js/scripts.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>